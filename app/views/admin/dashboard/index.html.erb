<h1 class="text-2xl font-bold mb-4">Admin Dashboard</h1>

<section class="mb-6">
  <h2 class="text-xl font-semibold">Users</h2>
  <ul class="space-y-1">
    <% @users.each do |user| %>
      <li><%= user.email %> – <%= user.role %></li>
    <% end %>
  </ul>
</section>

<section class="mb-6">
  <h2 class="text-xl font-semibold">Sellers</h2>
  <ul class="space-y-1">
    <% @sellers.each do |seller| %>
      <li><%= seller.user.email %> – IP: <%= seller.public_ip %></li>
    <% end %>
  </ul>
</section>

<section>
  <h2 class="text-xl font-semibold">Jobs</h2>
  <ul class="space-y-1">
    <% @jobs.each do |job| %>
      <li><%= job.title %> – <%= job.status %> – $<%= job.price %></li>
    <% end %>
  </ul>
</section>
