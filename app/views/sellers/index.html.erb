<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Available Sellers</h1>

  <%= render "users/role_status", user: current_user %>

  <% if @sellers.empty? %>
    <div class="alert alert-info shadow-lg">
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>No sellers available at the moment.</span>
      </div>
    </div>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @sellers.each do |seller| %>
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300">
          <div class="card-body">
            <h2 class="card-title">
              <%= link_to seller.name, seller_path(seller), class: "hover:text-primary" %>
            </h2>
            <div class="stats shadow">
              <div class="stat">
                <div class="stat-title">CPU Cores</div>
                <div class="stat-value text-primary"><%= seller.cpu %></div>
                <div class="stat-desc">Available for rent</div>
              </div>
            </div>
            <div class="card-actions justify-end mt-4">
              <%= link_to "View Details", seller_path(seller), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
