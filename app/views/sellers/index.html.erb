<% content_for :title do %>Available Sellers - Lumrais Rsp<% end %>

<div class="dashboard-container">
  <div class="dashboard-header">
    <h1 class="dashboard-title">Available Sellers</h1>
  </div>

  <div class="dashboard-card mb-8">
    <div class="dashboard-card-body">
      <turbo-frame id="promote-role">
        <%= render "users/role_status", user: current_user %>
      </turbo-frame>
    </div>
  </div>

  <% if @sellers.empty? %>
    <div class="bg-gray-100 rounded-lg p-6 text-center">
      <p class="text-gray-700">No sellers available at the moment.</p>
    </div>
  <% else %>
    <div class="dashboard-card">
      <div class="dashboard-card-header">
        <h2 class="dashboard-card-title">Seller Listings</h2>
      </div>
      
      <div class="dashboard-card-body p-0">
        <ul class="list-divided">
          <% @sellers.each do |seller| %>
            <li class="list-item">
              <div class="flex items-center justify-between">
                <div>
                  <%= link_to seller.name, seller_path(seller), class: "text-lg font-medium text-primary hover:text-primary-dark" %>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="badge badge-blue">
                    <%= seller.cpu %> CPUs
                  </span>
                  <span class="badge badge-green">
                    <%= seller.ram %> MB RAM
                  </span>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>

<% parent_layout "dashboard" %>

