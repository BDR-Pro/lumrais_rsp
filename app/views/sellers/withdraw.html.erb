<div class="max-w-3xl mx-auto p-6">
  <h1 class="text-2xl font-semibold mb-4">Withdraw Earnings</h1>
  <p class="mb-4">Enter the amount you'd like to withdraw:</p>
  <%= form_with url: withdraw_seller_path, method: :post, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :amount, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :amount, step: 0.01, class: "mt-1 border px-3 py-2 rounded w-full" %>
    </div>
    <%= form.submit "Withdraw", class: "bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600" %>
  <% end %>
</div>
