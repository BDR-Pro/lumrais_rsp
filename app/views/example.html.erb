<% content_for :title, "Example Page - Lumrais RSP" %>
<% content_for :meta_description, "This is an example page demonstrating template inheritance in Lumrais RSP" %>
<% content_for :meta_keywords, "example, template, inheritance, Lumrais, RSP" %>

<% content_for :head do %>
  <!-- Additional head content specific to this page -->
  <style>
    .custom-example-style {
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
  </style>
<% end %>

<% content_for :content do %>
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold text-primary mb-4">Example Page</h1>
    <p class="text-gray-700 mb-6">This page demonstrates how to inherit from the base template.</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-light p-4 custom-example-style">
        <h2 class="text-xl font-semibold mb-2">Template Inheritance</h2>
        <p class="text-gray-600">
          This page inherits from the base.html.erb template. You can define content blocks
          using the content_for helper to customize specific sections of the base template.
        </p>
      </div>
      
      <div class="bg-light p-4 custom-example-style">
        <h2 class="text-xl font-semibold mb-2">Tailwind CSS</h2>
        <p class="text-gray-600">
          The base template includes Tailwind CSS, which provides utility classes for
          rapid UI development. This example uses Tailwind classes for styling.
        </p>
      </div>
    </div>
    
    <div class="mt-8">
      <h2 class="text-2xl font-bold mb-4">Available Content Blocks</h2>
      <ul class="list-disc pl-6 space-y-2 text-gray-700">
        <li><strong>title</strong> - Sets the page title</li>
        <li><strong>meta_description</strong> - Sets the meta description</li>
        <li><strong>meta_keywords</strong> - Sets the meta keywords</li>
        <li><strong>head</strong> - Adds additional content to the head section</li>
        <li><strong>content</strong> - The main content of the page</li>
        <li><strong>scripts</strong> - Adds additional scripts at the end of the body</li>
      </ul>
    </div>
    
    <div class="mt-8 flex space-x-4">
      <a href="#" class="px-4 py-2 bg-primary text-white rounded hover:bg-primary-dark transition">
        Primary Button
      </a>
      <a href="#" class="px-4 py-2 bg-secondary text-white rounded hover:bg-secondary-dark transition">
        Secondary Button
      </a>
      <a href="#" class="px-4 py-2 bg-accent text-white rounded hover:bg-accent-dark transition">
        Accent Button
      </a>
    </div>
  </div>
<% end %>

<% content_for :scripts do %>
  <!-- Additional scripts specific to this page -->
  <script>
    console.log('Example page loaded successfully!');
  </script>
<% end %>

<%= render template: 'layouts/base' %>

