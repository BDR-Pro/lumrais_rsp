<div class="p-4 rounded-lg">
  <% if user.buyer? %>
    <p class="text-gray-600 mb-3">You're currently a buyer. Become a seller to offer your computing resources.</p>
    <%= button_to "Become a Seller", promote_to_seller_path,
          method: :post,
          data: { turbo_frame: "promote-role" },
          class: "inline-flex items-center px-4 py-2 bg-success text-white font-medium rounded-md hover:bg-success-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-success transition-colors" %>
  <% elsif user.seller? %>
    <p class="text-success font-medium mb-3">You're currently a seller. Your resources are available in the marketplace.</p>
    <%= button_to "Switch back to Buyer", demote_to_buyer_path,
          method: :post,
          data: { turbo_frame: "promote-role" },
          class: "inline-flex items-center px-4 py-2 bg-warning text-white font-medium rounded-md hover:bg-warning-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-warning transition-colors" %>
  <% end %>
</div>

