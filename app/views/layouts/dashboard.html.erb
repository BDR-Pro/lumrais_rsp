<% content_for :head do %>
  <title><%= content_for(:title) || "Dashboard - Lumrais Rsp" %></title>
<% end %>

<% content_for :styles do %>
  <style>
    /* Dashboard-specific styles */
    .dashboard-container {
      @apply container mx-auto px-4 py-8;
    }
    
    .dashboard-header {
      @apply mb-6 flex flex-col md:flex-row md:items-center md:justify-between;
    }
    
    .dashboard-title {
      @apply text-3xl font-bold text-primary;
    }
    
    .dashboard-actions {
      @apply mt-4 md:mt-0 flex space-x-4;
    }
    
    .dashboard-card {
      @apply bg-white rounded-lg shadow-md overflow-hidden mb-6;
    }
    
    .dashboard-card-header {
      @apply px-6 py-4 border-b border-gray-200 flex justify-between items-center;
    }
    
    .dashboard-card-title {
      @apply text-xl font-semibold text-gray-900;
    }
    
    .dashboard-card-body {
      @apply p-6;
    }
    
    .dashboard-card-footer {
      @apply px-6 py-4 bg-gray-50 border-t border-gray-200;
    }
    
    .dashboard-stats {
      @apply grid grid-cols-1 md:grid-cols-3 gap-6 mb-8;
    }
    
    .dashboard-stat-card {
      @apply bg-white rounded-lg shadow-md p-6;
    }
    
    .dashboard-stat-value {
      @apply text-3xl font-bold text-primary mb-1;
    }
    
    .dashboard-stat-label {
      @apply text-sm text-gray-600;
    }
    
    .dashboard-table {
      @apply min-w-full divide-y divide-gray-200;
    }
    
    .dashboard-table-header {
      @apply bg-gray-50;
    }
    
    .dashboard-table-header-cell {
      @apply px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider;
    }
    
    .dashboard-table-body {
      @apply bg-white divide-y divide-gray-200;
    }
    
    .dashboard-table-row {
      @apply hover:bg-gray-50;
    }
    
    .dashboard-table-cell {
      @apply px-6 py-4 whitespace-nowrap text-sm text-gray-900;
    }
  </style>
<% end %>

<%= render template: "layouts/base" %>

