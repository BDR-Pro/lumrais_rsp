<div class="max-w-3xl mx-auto p-6">
  <h1 class="text-2xl font-semibold mb-4">Charge Account</h1>
  <%= form_with url: profile_payment_path, method: :post, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :amount, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :amount, step: 0.01, class: "mt-1 border px-3 py-2 rounded w-full" %>
    </div>
    <%= form.submit "Charge", class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
  <% end %>
</div>