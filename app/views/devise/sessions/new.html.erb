<% content_for :title do %>Sign In - Lumrais Rsp<% end %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2 class="text-xl font-semibold text-gray-900">Sign In</h2>
    </div>
    
    <div class="auth-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign In", class: "auth-button" %>
        </div>
      <% end %>
    </div>
    
    <div class="auth-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<% parent_layout "auth" %>

