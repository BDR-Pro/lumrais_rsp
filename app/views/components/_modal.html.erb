<%# 
  Usage:
  <%= render "components/modal",
    id: "delete-confirmation",
    title: "Delete Item",
    content: "Are you sure you want to delete this item?",
    confirm_text: "Delete",
    cancel_text: "Cancel"
  %>
%>

<dialog id="<%= id %>" class="modal">
  <div class="modal-box">
    <h3 class="font-bold text-lg"><%= title %></h3>
    <p class="py-4"><%= content %></p>
    <div class="modal-action">
      <form method="dialog">
        <button class="btn btn-ghost"><%= cancel_text %></button>
        <button class="btn btn-primary ml-2"><%= confirm_text %></button>
      </form>
    </div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<%# 
  To open the modal:
  <button onclick="document.getElementById('<%= id %>').showModal()">Open Modal</button>
%> 