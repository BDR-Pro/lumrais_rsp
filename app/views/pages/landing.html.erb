<!-- Hero Section -->
<div class="hero min-h-screen bg-base-200">
  <div class="hero-content text-center">
    <div class="max-w-3xl">
      <h1 class="text-5xl font-bold mb-6">Your Decentralized Cloud. Reinvented.</h1>
      <p class="text-xl mb-8">Run, trade, and monetize virtual machines. Built for speed. Powered by Rust.</p>
      <div class="flex gap-4 justify-center">
        <%= link_to "Get Started", new_user_registration_path, class: "btn btn-primary" %>
        <%= link_to "Join the Network", "#network", class: "btn btn-outline" %>
      </div>
    </div>
  </div>
</div>

<!-- Feature Cards Section -->
<div class="py-16 bg-base-100">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Built-in VPN and TLS -->
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <div class="text-4xl mb-4">🔐</div>
          <h3 class="card-title">Built-in VPN and TLS</h3>
          <p>All node connections are secure out-of-the-box. No config. Just trustless transport.</p>
        </div>
      </div>

      <!-- Powered by Rust -->
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <div class="text-4xl mb-4">🦀</div>
          <h3 class="card-title">Powered by Rust</h3>
          <p>Built from the ground up in Rust for blazing-fast performance and safety.</p>
        </div>
      </div>

      <!-- Docker Inside -->
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <div class="text-4xl mb-4">📦</div>
          <h3 class="card-title">Docker Inside</h3>
          <p>Run containers, not just code. Full Docker support for every VM.</p>
        </div>
      </div>

      <!-- CLI-First -->
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <div class="text-4xl mb-4">⚙️</div>
          <h3 class="card-title">CLI-First</h3>
          <p>Configure, trade, and deploy from terminal. No GUI required.</p>
        </div>
      </div>

      <!-- P2P Marketplace -->
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <div class="text-4xl mb-4">🌐</div>
          <h3 class="card-title">P2P Marketplace</h3>
          <p>Buy and sell computational resources like CPU, GPU, or storage with just an API key.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Tech Stack Section -->
<div class="py-16 bg-base-200">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Built with Modern Tech</h2>
    <div class="flex flex-wrap justify-center gap-8">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body items-center text-center">
          <div class="text-4xl mb-2">🦀</div>
          <h3 class="card-title">Rust</h3>
          <p>Memory safe, thread-fast</p>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body items-center text-center">
          <div class="text-4xl mb-2">💎</div>
          <h3 class="card-title">Ruby</h3>
          <p>Control plane + API orchestration</p>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body items-center text-center">
          <div class="text-4xl mb-2">📊</div>
          <h3 class="card-title">Grafana</h3>
          <p>Real-time performance metrics</p>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body items-center text-center">
          <div class="text-4xl mb-2">🐋</div>
          <h3 class="card-title">Docker</h3>
          <p>Container orchestration</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Developer Playground -->
<div class="py-16 bg-base-100">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Developer Playground</h2>
    <div class="mockup-code max-w-2xl mx-auto bg-base-300">
      <pre class="p-4"><code class="text-sm"># Connect to VPN
connect.exe --vpn=https://vpn.lumaris.io/magic?token=XYZ

# Deploy VM
rspctl --mode buyer --vm spec.yaml --seller 192.168.1.45</code></pre>
    </div>
  </div>
</div>

<!-- Pricing Section -->
<div class="py-16 bg-base-200">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Simple Pricing</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Free Tier -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title">Free Tier</h3>
          <p class="text-3xl font-bold">$0</p>
          <ul class="space-y-2 mt-4">
            <li>Run 1 task</li>
            <li>2 CPUs</li>
            <li>2GB RAM</li>
          </ul>
          <div class="card-actions justify-end mt-4">
            <%= link_to "Get Started", new_user_registration_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>

      <!-- Pro Tier -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title">Pro for Sellers</h3>
          <p class="text-3xl font-bold">$29/mo</p>
          <ul class="space-y-2 mt-4">
            <li>Unlock dashboard</li>
            <li>Profit tracking</li>
            <li>Automated payout</li>
          </ul>
          <div class="card-actions justify-end mt-4">
            <%= link_to "Get Started", new_user_registration_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>

      <!-- Enterprise -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title">Enterprise API</h3>
          <p class="text-3xl font-bold">Custom</p>
          <ul class="space-y-2 mt-4">
            <li>Matchmaking</li>
            <li>Private nodes</li>
            <li>SLAs & analytics</li>
          </ul>
          <div class="card-actions justify-end mt-4">
            <%= link_to "Contact Sales", "#contact", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

