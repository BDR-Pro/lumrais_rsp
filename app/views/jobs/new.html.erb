<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">Create New Job</h1>

    <%= form_with(model: @job, local: true, class: "space-y-6") do |f| %>
      <% if @job.errors.any? %>
        <div class="alert alert-error mb-6">
          <h2 class="text-lg font-semibold mb-2">
            <%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:
          </h2>
          <ul class="list-disc list-inside">
            <% @job.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-control">
        <%= f.label :title, class: "label" %>
        <%= f.text_field :title, class: "input input-bordered w-full", placeholder: "Enter job title" %>
      </div>

      <div class="form-control">
        <%= f.label :description, class: "label" %>
        <%= f.text_area :description, class: "textarea textarea-bordered h-32", placeholder: "Describe the job requirements" %>
      </div>

      <div class="form-control">
        <%= f.label :budget, class: "label" %>
        <div class="relative">
          <span class="absolute left-3 top-1/2 transform -translate-y-1/2">$</span>
          <%= f.number_field :budget, class: "input input-bordered w-full pl-8", placeholder: "0.00", step: "0.01", min: "0" %>
        </div>
      </div>

      <div class="form-control">
        <%= f.label :deadline, class: "label" %>
        <%= f.date_field :deadline, class: "input input-bordered w-full" %>
      </div>

      <div class="flex justify-end gap-4">
        <%= link_to "Cancel", jobs_path, class: "btn btn-ghost" %>
        <%= f.submit "Create Job", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div> 